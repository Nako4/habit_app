<!DOCTYPE html>
<html>
  <head>
    <title>HabitApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  </head>

  <body>
    <header class="header">
      <div class="header__bar row">
        <h1 class="grid-6"><a href="/">HabitApp</a></h1>
        <% if user_signed_in? %>
          <div class="user_nav grid-6" >
            <%= link_to "ログアウト", destroy_user_session_path, class:"post", method: :delete %>
            <%= link_to "新規投稿", new_article_path, class: "post" %>
            <%= link_to "マイページ", users_show_path(current_user.id), class: "post" %>
          </div>  
        <% else %>
          <div class="user_nav grid-6">
            <%= link_to "ログイン", new_user_session_path, class: "post" %>
            <%= link_to "新規登録", new_user_registration_path, class: "post" %>
          </div>
        <% end %>
      </div>
    </header>
    <%= yield %>
    <footer>
      <p>
        Copyright HabitApp 2020
      </p>
    </footer>
  </body>
</html>
